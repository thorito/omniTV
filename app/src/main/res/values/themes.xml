<resources>

    <style name="Theme.OmniTV" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="Theme.Leanback.Guide" parent="Theme.AppCompat.Leanback.GuidedStep">
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="Theme.Leanback.Guide.Mobile" parent="Theme.AppCompat.Leanback.GuidedStepBase">
        <item name="guidedStepThemeFlag">false</item>
        <item name="guidanceContainerStyle">@style/Theme.Leanback.Guide.Mobile.GuidanceContainerStyle</item>
    </style>

    <style name="Theme.Leanback.Guide.Mobile.GuidanceContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>